<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/background_light</item>
        <item name="colorPrimaryDark">@android:color/background_dark</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="Note_Edit_View_Activity_Theme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@android:color/background_light</item>
        <item name="colorPrimaryDark">@android:color/darker_gray</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="SignIn_Activity_Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/background_light</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:windowBackground">@drawable/signin_bg1</item>
    </style>

    <style name="LoginTheme" parent="FirebaseUI">
        <!-- Required for sign-in flow styling -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/gray</item>

        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/gray</item>
        <item name="colorButtonNormal">@color/white</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorHint">@color/light_black</item>

        <item name="android:windowBackground">@drawable/signin_bg1</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@null</item>

    </style>

    <style name="PinLockScreenActivityTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@android:color/background_light</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>

<!--        lockscreen theme-->
        <item name="pf_lock_screen">@style/MyLockScreenStyle</item>
    </style>

    <style name="MyLockScreenStyle">
        <item name="android:background">@color/light_black</item>
    </style>

    <style name="ChecklistEditActivityTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@android:color/background_light</item>
        <item name="colorPrimaryDark">@android:color/darker_gray</item>
        <item name="colorAccent">@color/black</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>


    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <!-- reference our hint & error styles -->
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">50dp</item>
    </style>


    <style name="BottomSheetTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MyApp.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.MyApp.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>